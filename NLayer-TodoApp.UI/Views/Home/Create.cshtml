@model WorkCreateDto
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body class="bg-dark text-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-secondary mx-auto">
    <div class="container-fluid">

        <a class="navbar-brand nav-item" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link">Home</a>

                </li>
                <li class="nav-item">

                    <a class="nav-link">Create</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">

        <div asp-validation-summary="All"></div>
    <form method="POST" asp-action="Create" >
        <div class="mt-3">
            <label class="form-label">Definition</label>
            <input class="form-control" type="text" asp-for="Definition"/>
            
        </div>
        <div class="mt-3">
            <label class="form-check-label">Status</label>

            <input class="form-check-input" type="checkbox" asp-for="isCompleted"/>

        </div>
        
        
        <button class="mt-3 btn btn-primary" type="submit">Submit</button>
    </form>
</div>

</body>

</html>