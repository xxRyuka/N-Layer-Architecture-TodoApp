@model List<WorkListDto>
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body class="bg-dark text-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-secondary mx-auto">
    <div class="container-fluid">

        <a class="navbar-brand nav-item" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link">Home</a>

                </li>
                <li class="nav-item">

                    <a class="nav-link">Create</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">

    <div class="w-100 mx-auto mt-5 p-3 rounded bg-secondary text-white text-center">
        <h2>Create Item</h2>
        <a asp-action="Create" class="btn btn-dark"> Create </a>
    </div>

    <table class="table-dark table">
        <thead>
        <tr>
            <th width="150pc" scope="col">Id</th>

            <th width="150pc" scope="col">Definition</th>
            <th width="150pc" scope="col">Status</th>
            <th width="50pc" scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>@item.Id</td>

                <td>@item.Definition</td>
                <td>@(item.isCompleted ? "ok" : "no")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-warning">Edit</a>
                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
        </tbody>
    </table>

</div>

</body>

</html>
